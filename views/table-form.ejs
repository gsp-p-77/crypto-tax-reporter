<!DOCTYPE html>
<html>
<head>
  <title>Dynamic Table Form</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script>
    function addRow() {
      const tableBody = document.querySelector('#data-table tbody');
      const firstRow = tableBody.querySelector('tr');
      const newRow = firstRow.cloneNode(true);
      newRow.querySelectorAll('input').forEach(input => input.value = '');
      tableBody.appendChild(newRow);
    }
  </script>
</head>
<body class="p-4">
  <h2>Editable Table</h2>

  <form method="POST" action="/save">
    <table id="data-table" class="table table-bordered mt-3">
      <thead>
        <tr>
          <th>Attribute 1</th>
          <th>Attribute 2</th>
          <th>Attribute 3</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((row, i) => { %>
          <tr>
            <td><input class="form-control" name="attribute1" value="<%= row.attribute1 %>"></td>
            <td><input class="form-control" name="attribute2" value="<%= row.attribute2 %>"></td>
            <td><input class="form-control" name="attribute3" value="<%= row.attribute3 %>"></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <button type="button" class="btn btn-secondary" onclick="addRow()">Add Row</button>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</body>
</html>

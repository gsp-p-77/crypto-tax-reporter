<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Transaktionsübersicht - Crypto Tax Reporter</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/styles.css">
</head>

<body>
  <!-- ✅ Navbar -->
  <%- include('partials/navbar') %>

  <!-- ✅ Flash messages -->
  <%- include('partials/flash') %>

  <div class="container">
    <h2 class="text-center mb-4">Transaktionsübersicht</h2>

    <% if (data && data.length > 0) { %>
      <form id="deleteForm" action="/transactions/delete" method="POST">
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
              <tr>
                <th scope="col">
                  <!-- ✅ Master checkbox to select/deselect all -->
                  <input type="checkbox" id="selectAll">
                </th>
                <th scope="col">UUID</th>
                <th scope="col">Date</th>
                <th scope="col">Type</th>
                <th scope="col">Amount (BTC)</th>
                <th scope="col">Price per BTC (EUR)</th>
                <th scope="col">Order Price (EUR)</th>
                <th scope="col">Fee (EUR)</th>
                <th scope="col">Wallet</th>
                <th scope="col">Tx ID</th>
                <th scope="col">Comments</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(tx => { %>
                <tr>
                  <td>
                    <input type="checkbox" name="selected[]" value="<%= tx.id %>" class="rowCheckbox">
                  </td>
                  <td><%= tx.id || '-' %></td>
                  <td><%= tx.date || '-' %></td>
                  <td><%= tx.type || '-' %></td>
                  <td><%= tx.amount?.toFixed(8) || '-' %></td>
                  <td><%= tx.pricePerBtc?.toFixed(2) || '-' %></td>
                  <td><%= tx.priceOrder?.toFixed(2) || '-' %></td>
                  <td><%= tx.fee?.toFixed(2) || '-' %></td>
                  <td><%= tx.wallet_address || '-' %></td>
                  <td><%= tx.tx_hash || '-' %></td>
                  <td><%= tx.comments || '' %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <!-- ✅ Delete button -->
        <div class="text-center mt-3">
          <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete Selected
          </button>
        </div>
      </form>
    <% } else { %>
      <div class="alert alert-info text-center">
        No transactions found yet.
      </div>
    <% } %>
  </div>

  <!-- ✅ Footer -->
  <footer class="bg-dark text-white text-center py-3 mt-4">
    <p>&copy; 2025 Crypto Tax Reporter. Author: Gero Sparwald. All rights reserved.</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- ✅ JavaScript: handle select all and confirm delete -->
  <script>
    // Select/Deselect all checkboxes
    document.getElementById('selectAll')?.addEventListener('change', function (e) {
      document.querySelectorAll('.rowCheckbox').forEach(cb => {
        cb.checked = e.target.checked;
      });
    });

    // Confirm deletion before submitting
    document.getElementById('deleteForm')?.addEventListener('submit', function (e) {
      const selected = document.querySelectorAll('.rowCheckbox:checked');
      if (selected.length === 0) {
        e.preventDefault();
        alert('Please select at least one transaction to delete.');
      } else if (!confirm(`Are you sure you want to delete ${selected.length} transaction(s)?`)) {
        e.preventDefault();
      }
    });
  </script>
</body>
</html>
